@{
    ViewBag.Title = "Регистрация";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Регистрация</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #111;
            color: #fff;
            font-family: Arial, sans-serif;
            margin: 0;
        }

        .card {
            background-color: #191a1b;
            border: none;
        }

        .btn-primary {
            background-color: #ccff00;
            border: none;
            color: #111;
        }

            .btn-primary:hover {
                background-color: #b3e600;
            }

        .text-primary {
            color: #ccff00 !important;
        }

        a.text-primary:hover {
            text-decoration: underline;
        }

        label {
            color: #fff;
        }

        .register-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: calc(94vh - 100px);
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="card shadow-lg rounded-lg p-4">
            <div class="card-header text-center">
                <h2 class="text-center font-weight-bold text-primary">Регистрация</h2>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group">
                        <label for="clientSurname" class="font-weight-bold">Фамилия пользователя:</label>
                        <input type="text" class="form-control" name="userSurname" placeholder="Введите фамилию пользователя">
                    </div>
                    <div class="form-group">
                        <label for="clientName" class="font-weight-bold">Имя пользователя:</label>
                        <input type="text" class="form-control" name="userName" placeholder="Введите имя пользователя">
                    </div>
                    <div class="form-group">
                        <label for="clientMiddleName" class="font-weight-bold">Отчество пользователя:</label>
                        <input type="text" class="form-control" name="userMiddleName" placeholder="Введите отчество пользователя">
                    </div>
                    <div class="form-group">
                        <label for="phone" class="font-weight-bold">Номер телефона:</label>
                        <input type="tel" class="form-control" name="phone" placeholder="Введите номер телефона">
                    </div>
                    <div class="form-group">
                        <label for="loginn" class="font-weight-bold">Email:</label>
                        <input type="email" class="form-control" name="logins" placeholder="Введите email">
                    </div>
                    <div class="form-group">
                        <label for="pass" class="font-weight-bold">Пароль:</label>
                        <input type="password" class="form-control" name="passwords" placeholder="Введите пароль" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block rounded-pill font-weight-bold">Зарегистрироваться</button>
                </form>
                @if (ViewBag.ErrorMessage != null)
                {
                    @ViewBag.ErrorMessage
                    ;
                }
                <div class="text-center mt-3">
                    <a asp-action="authorization" asp-controller="Home" class="text-primary">Уже есть аккаунт? Войдите!</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>